html
	height:100%

body
	height:100%
	font: 11px/1.2 $roboto-light
	color: $dark-grey-blue
	background: alpha(#16467d, 0.07)

	&>svg
		position: absolute
		top: -9999px
		left: -9999px

	a
		text-decoration: none

		&:hover
			text-decoration: underline

.logo
	width:70px
	height:70px
	background: $red
	margin: 0 20px 0 0

	+below($desktop)
		margin: 0 10px 0 0

	a
		display: flex
		width:100%
		height:100%

	svg
		width:32px
		height:53px
		display: block
		margin: 0 auto
		align-self: center

.logo-text
	align-self: center
	font-size: 24px

	.strong
		font-family: $roboto-medium

.input-row
	display: flex
	margin: 0 0 25px
	justify-content: space-between

	input[type="text"]
	input[type="password"]
	input[type="email"]
		width:100%
		border: solid rgba(0, 0, 0, 0.14)
		border-width: 0 0 1px
		margin: 0
		display: block
		padding: 8px 0
		box-sizing: border-box
		outline: none
		font-size: 16px
		line-height: 1.5

	.input-holder
		align-self: 0
		position: relative
		font-size: 12px

		input[type="checkbox"]
		input[type="radio"]
			opacity:0
			position: absolute
			top:0
			left:0

	label.input-checkbox
		padding: 0 0 0 33px
		position: relative
		line-height: 20px
		display: block

		&:before
			content: ""
			width: 20px
			height: 20px
			background: #4babf6
			position: absolute
			top:0
			left:0

	input[type="checkbox"]
	input[type="radio"]
		&:checked + label
			&:after
				content:""
				width:11px
				height:5px
				transform:rotate(-45deg)
				border: solid $white
				border-width: 0 0 2px 2px
				position: absolute
				top: 4px
				left: 4px

	&>a
		display: block
		align-self: center
		color: $dark-grey-blue
		font-size: 12px

	.btn
		font:bold 14px/52px $roboto-regular
		color: $white
		text-align: center
		border-radius: 3px
		display: block
		text-transform: uppercase

		&-primary
			width: 70%
			background: $red

		&-secondary
			width: 30%
			margin: 0 7px 0 0
			background: $dark-grey-blue
			box-sizing: border-box

.page
	padding: 0 0 0 70px
	position: relative
	min-height: 100%

	+below($desktop)
		padding: 0

+below($desktop)
	.page-overlay
		position: fixed
		z-index: 18
		display: none
		top:0
		left:0
		right:0
		bottom:0
		width:100%
		height:100%
		background: $white
		opacity: 0

		.menu-open &
			display: block

	.menu-open
		height: 100vh
		overflow: hidden
		position: fixed
		width: 100%

.content
	padding: 25px
	box-sizing: border-box

	h3
		margin-bottom: 30px
		font: 18px/22px $roboto-medium

	+below($desktop)
		padding: 25px 0 0

.white-content
	background: $white
	padding: 20px 20px 50px
	border-radius: 5px
	box-shadow: 2px 2px 4px 0 rgba(197, 197, 197, 0.5)
	position: relative
	&.divider
		&:after
			width: 1px
			height: 100%
			background: rgba(67, 84, 100, 0.3)
			position: absolute
			right: 363px
			top: 0
			bottom: 0
			content: ''

.page-fader
	background: rgba(67, 84, 100, 0.65)
	position: fixed
	top: 0
	left: 0
	width:100%
	height:100%
	z-index:20

