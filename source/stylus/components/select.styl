.bootstrap-select
	position: relative
	margin-left: 20px
	+below($mobile)
		margin: 0px

	select
		position: absolute!important
		bottom: 0
		left: -9999px
		display: block!important
		width: .5px!important
		height: 100%!important
		padding: 0!important
		opacity: 0!important
		border: none

	.dropdown-toggle
		background: #fff
		border: 0
		outline: none
		color: #38414b
		font: 14px/1.71 $roboto-regular
		padding: 7px 12px 0 0
		position: relative
		z-index: 18
		cursor: pointer
		max-width: 130px
		box-sizing: border-box
		overflow: hidden
		white-space: nowrap
		border-top-left-radius: 3px
		border-top-right-radius: 3px
		.filter-option
			display: inline-block
			border-bottom: 1px solid rgba(0, 0, 0, 0.14)
			padding-right: 15px
			overflow: hidden
			white-space: nowrap
			text-overflow: ellipsis
			max-width: 105px
			box-sizing: border-box
			.show-tick&
				max-width: 60px
			.open&
				border-bottom-color: transparent
		.open&
			color: $dark-sky-blue
			box-shadow: 0 -3px 4px 0 rgba(0, 0, 0, 0.1)
			padding-left: 12px
			margin-left: -12px
		.show-tick&
			.control-panel &
				+below($mobile)
					display: none

		.caret
			width: 8px
			height: 8px
			transform: rotate(-45deg)
			border-left: 1px solid #607d8b
			border-bottom: 1px solid #607d8b
			display: block
			position: absolute
			right: 15px;
			top: 50%;
			margin-top: -8px;

.dropdown-menu
	position: absolute
	top: calc(100% - 2px)
	right: 0
	z-index: 17
	display: none
	width: 163px
	font-size: 14px
	text-align: left
	list-style: none
	background-color: #fff
	background-clip: padding-box
	border-radius: 4px
	box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.24), 0 0 4px 0 rgba(0, 0, 0, 0.12)
	li
		font: 12px/1.17 $roboto-medium
		text-align: center
		padding: 10px
		a
			outline: none
		&:hover
			background: rgba(94, 161, 139, 0.2)
	.show-tick &
		li
			color: #435464
			margin-bottom: 20px
			cursor: pointer
			text-align: left
			padding: 0 20px
			&:first-child
				margin-top: 20px
			&:hover
				background: none
			a
				position: relative
				display: inline-block
				padding: 0 0 0 30px
				&:before
					position: absolute
					left: 0
					top: -2px
					width: 14px
					height: 14px
					border-radius: 2px
					border: 1px solid $dark-sky-blue
					content: ''
				&:after
					width: 9px
					height: 4px
					border-left: 1px solid #ffffff
					border-bottom: 1px solid #ffffff
					transform: rotate(-45deg)
					position: absolute
					left: 3px
					top: 2px
			&.selected
				a
					&:before
						background: $dark-sky-blue
					&:after
						content: ''
		.control-panel &
			+below($mobile)
				display: block
				position: static
				width: 100%
				box-shadow: none
				&.inner
					display: flex
					justify-content: space-between
					margin-bottom: 24px
					li
						margin: 0
						padding: 0

	&.inner
		position: static
		float: none
		border: 0
		padding: 0
		margin: 0
		border-radius: 0
		box-shadow: none

	.open &
		display block
