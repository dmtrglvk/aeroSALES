.breadcrumbs
	background: $dark-grey-blue
	padding: 10.5px 20px
	color: $white
	font-size: 12px

	ul
		li
			display: inline-block
			padding: 0 14px 0 0
			margin: 0 14px 0 0
			position: relative

			&:last-of-type
				&:after
					display: none

			&:after
				left: 100%
				top: 50%
				border: solid transparent
				content: " "
				height: 0
				width: 0
				position: absolute
				pointer-events: none
				border-color: rgba(170, 178, 183, 0)
				border-left-color: #aab2b7
				border-width: 4px
				margin-top: -4px

			a
				font-weight: bold
				color: $white