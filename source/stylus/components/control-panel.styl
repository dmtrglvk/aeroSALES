.control-panel
	display: flex
	justify-content: space-between
	background: #ffffff
	padding: 21px 25px
	position: relative
	z-index:20

	+below($desktop)
		display: block
		padding: 7px 0 20px

	.title
		font-size: 30px
		color: #344252
		+below($desktop)
			text-align: center
			margin-bottom: 30px

.r-bar
	display: flex
	max-width: 85%
	justify-content: flex-end
	align-items: center

	+below($desktop)
		width:100%
		display: block
		max-width: 9999px
		text-align: center
		&>*
			display: inline-block
			vertical-align: top
			margin-bottom: 10px

		&>.bootstrap-select
			//margin: 0

			&>.dropdown-menu[role="combobox"]
				min-width:100%

			&:first-child
				.dropdown-menu
					right: auto
					left:-12px

	.temp-wrap
		display: flex
		align-items: center
		flex-wrap: wrap

		+below($desktop)
		//	display: block
			justify-content: space-around
			padding: 0 50px
			&>*
				margin-bottom: 10px
		+below($medium)
			padding: 0
			margin: 0 10px 0 0
		+below($mobile)
			justify-content: space-between



.content-panel
	display: flex
	justify-content: space-between
	align-items: center
	margin-bottom: 30px

	h3
		.content &
			margin-bottom: 0

	+below($desktop)
		display: block
		text-align: center

		.btn-tools
			display: inline-block
			margin: 0 0 15px

.evolution-panel
	width:100%

	.r-bar
		max-width: 100%
		justify-content: space-between
		align-items: flex-start

		.select-item
			&:first-child
				.bootstrap-select
					.dropdown-menu
						left: -12px
						right: auto

		.bootstrap-select
			margin: 0

			.dropdown-toggle
				max-width: 330px

				.filter-option
					max-width: 300px

	.datepicker-row
		margin: 8px 0 0

		input
			font: 14px/1.71 $roboto-regular
			padding: 2px 0
			color: #38414b

	span.label
		display: block
		font-size: 12px
		margin: 0 0 5px

		+below($desktop)
			text-align: left
