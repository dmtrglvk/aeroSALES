.control-panel
	display: flex
	justify-content: space-between
	background: #ffffff
	padding: 21px 25px
	+below($desktop)
		display: block
		padding: 7px 0 20px

	.title
		font-size: 30px
		color: #344252
		+below($desktop)
			text-align: center
			margin-bottom: 30px

	.r-bar
		display: flex
		max-width: 85%
		justify-content: flex-end
		align-items: center
		+below($desktop)
			width:100%
			display: block
			max-width: 9999px

			&>.bootstrap-select
				margin: 0

				&>.dropdown-menu[role="combobox"]
					min-width:100%

		.temp-wrap
			display: flex
			align-items: center
			flex-wrap: wrap

			+below($desktop)
				display: block
				text-align: center
			+below($mobile)
				text-align: left

			&>*
				display: inline-block
				vertical-align: top
