.table-block
	background: $white
	border-radius: 5px
	box-shadow: 2px 2px 4px 0 rgba(197, 197, 197, 0.5)
	padding: 11px 15px 26px
	box-sizing: border-box

	.table-wrapper
		overflow: auto

	table
		width: 100%
		th
			background: #ffffff
			color: rgba(74, 74, 74, 0.5)
			font-size: 10px
			border-left: solid 1px rgba(224, 223, 223, 0.2)
			border-top: solid 1px rgba(224, 223, 223, 0.2)
			border-bottom: solid 1px rgba(224, 223, 223, 0.2)
			padding: 6px 0
			&:first-child,
			&:last-child
				color: #435464
				font-size: 12px
				font-family: $roboto-medium
				min-width: 80px
			&:first-child
				text-align: left
				border-left: 0
			span
				display: block
		td
			color: #000
			font-family: $roboto-medium
			font-size: 10px
			border-left: solid 1px rgba(224, 223, 223, 0.2)
			border-bottom: solid 1px rgba(224, 223, 223, 0.2)
			text-align: center
			padding: 8px 4px
			vertical-align: middle
			&:first-child
				font-size: 12px
				text-align: left
				border-left: 0
				background: rgba(73, 144, 226, 0.06)

.rosy-pink
	background: $rosy-pink
.rosy-pink-light
	background: #f89577
