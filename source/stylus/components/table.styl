.table-block
	background: $white
	border-radius: 5px
	box-shadow: 2px 2px 4px 0 rgba(197, 197, 197, 0.5)
	padding: 11px 15px 26px
	box-sizing: border-box

.table-wrapper
	overflow: auto
	margin-bottom: 40px
	&:last-of-type
		margin-bottom: 0

table:not(.pika-table)
	width: 100%
	th
		background: #ffffff
		color: rgba(74, 74, 74, 0.5)
		font-size: 10px
		border-left: solid 1px rgba(224, 223, 223, 0.2)
		border-top: solid 1px rgba(224, 223, 223, 0.2)
		border-bottom: solid 1px rgba(224, 223, 223, 0.2)
		padding: 6px 0
		&:first-child,
		&:last-child
			color: #435464
			font-size: 12px
			font-family: $roboto-medium
			min-width: 80px
		&:first-child
			text-align: left
			border-left: 0
		span
			display: block
	td
		color: #000
		font-family: $roboto-medium
		font-size: 10px
		border-left: solid 1px rgba(224, 223, 223, 0.2)
		border-bottom: solid 1px rgba(224, 223, 223, 0.2)
		text-align: center
		padding: 8px 4px
		vertical-align: middle
		&:first-child
			font-size: 12px
			text-align: left
			border-left: 0
			background: rgba(73, 144, 226, 0.06)
	.hidden
		display: none
		td
			padding: 2px 4px
			&:first-child
				font-size: 10px
				font-family: $roboto-regular
				padding-left: 25px
	.sum
		td
			&:not(:first-child)
				color: rgba(52, 66, 82, 0.8)
				font-size: 9px
	.bg-pink
		td
			background: rgba(250, 184, 127, 0.3) !important

.white-row-ttl
	td
		&:first-child
			background: inherit

.multi-table
	padding: 34px 15px
	th
		svg
			width: 7px
			height: 8px
			fill: #435464
	td
		&:first-child
			background: #fff
	.outer
		td
			&:first-child
				cursor: pointer
				padding-left: 10px
				position: relative
				&:before
					border-top: 4px solid #000000
					border-left: 2px solid transparent
					border-right: 2px solid transparent
					position: absolute
					left: 0
					top: 50%
					margin-top: -2px
					content: ''
		&.open
			td
				&:before
					border-bottom: 4px solid #000000
					border-top: 0

