.content-info
	float: left
	width: calc(100% - 365px)

	+below($desktop)
		float: none
		width:100%
		margin: 0 0 30px

	.bootstrap-select.open
		position: relative
		z-index:22

.content-sidebar
	float: right
	width: 343px
	padding: 0 0 0 25px
	box-sizing: border-box

	+below($desktop)
		float: none
		width:100%
		padding: 0

.info-block
	display: flex

	+below($desktop)
		display: block

.forcast
	width: 200px
	border-radius: 3px
	background: rgba(67, 84, 100, 0.6)
	color: #fff
	padding: 15px 10px 10px
	box-sizing: border-box
	font: 14px/18px $roboto-regular
	margin-right: 30px

	+below($desktop)
		width:100%

	.box-ttl
		display: block
		margin-bottom: 15px

	.form-row
		margin-bottom: 9px
		holder()
		label
			font-size: 11px
			float: left
			max-width: 200px
			margin-top: 7px

			+below($desktop)
				width:100px

		input[type="text"]
			float: right
			width: 110px
			background: #ffffff
			box-sizing: border-box
			border: solid 1px rgba(151, 151, 151, 0.56)
			font-size: 12px
			line-height: 16px
			padding: 8px
			outline: none
			margin: 0

			+below($desktop)
				width:calc(100% - 126px)

.chart-wrap
	width: calc(100% - 230px)

	+below($desktop)
		width:100%

	.bar-chart
		height:100%

.chart-style
	margin-left: -45px
	li
		display: inline-block
		vertical-align: middle
		padding: 12px 8px 9px
		border: 1px solid transparent
		border-radius: 3px
		margin-left: 45px
		margin-bottom: 20px
		position: relative
		cursor: pointer
		&:before
			position: absolute
			left: 50%
			bottom: 0
			width: 20px
			height: 20px
			background: $dark-sky-blue
			border-radius: 50%
			margin: 0 0 -10px -10px
		&:after
			mark(1px, 1px, 50%)
			z-index: 2
			top: auto
			bottom: 0
			margin-left: -5px
			margin-bottom: -1px
		&.active
			border-color: #d8dcdf
			&:before,
			&:after
				content: ''
		&:first-child,
		&:nth-child(2),
		&:nth-child(3)
			svg
				width: 55px
				height: 49px
		&:nth-child(4)
			svg
				width: 57px
				height: 51px
		&:nth-child(5)
			svg
				width: 53px
				height: 53px

.note
	font: 12px/16px $roboto-regular
	color: #989fa6
	display: block
	margin-bottom: 25px
	
.checkbox-wrap
	.row
		position: relative
		margin-bottom: 30px
		font: 14px/18px $roboto-regular
		color: #38414b
		input[type="checkbox"]
			unvisible-input()
		label
			padding-left: 35px
			position: relative
			cursor: pointer
			&:before
				checkbox(3px, -5px, 22px, 22px)
				content: ''
			&:after
				mark(2px, 2px, 7px)

		input[type="checkbox"]
			&:checked + label
				&:before
					background: $dark-sky-blue
				&:after
					content: ''

.datepicker-row
	display: flex
	justify-content: space-between
	width:100%
	margin: 0 0 45px

	&.inactive
		opacity:0.5

	&>div
		width: calc(50% - 10px)

label.input-label
	display: block
	font-size: 12px

.datepicker
	border: 0
	border-bottom: 1px solid rgba(0, 0, 0, 0.12)
	background: url(../images/calendar.svg) 100% 50% no-repeat
	display: block
	width:100%
	outline: none
	font-size: 16px
	margin: 0
	padding: 10px 0

.recepients-holder
	border-bottom: 1px solid rgba(0, 0, 0, 0.12)
	position: relative
	margin: 20px 0 30px

	.add
		position: absolute
		right: 0
		top:50%
		transform:translate(0, -50%)
		width:18px
		height:18px

		svg
			display: block
			fill: $dark-sky-blue
			width:100%
			height:100%

	input
		padding: 11px 0
		font-size: 16px
		outline: none
		margin: 0
		width:90%
		background: none
		border:0

.recepients-list
	.item
		background: $dark-sky-blue
		border-radius: 100px
		padding: 0 14px
		color: $white
		font-size: 14px
		line-height: 30px
		display: inline-block
		vertical-align: top
		margin: 0 6px 10px 0

		span
			display: inline-block
			overflow: hidden
			white-space: nowrap
			max-width: 105px
			text-overflow: ellipsis
			vertical-align: top
			margin: 0 10px 0 0

		.remove
			width:11px
			height:11px
			display: inline-block
			vertical-align: top
			margin: 9px 0 0

			svg
				fill: $white
				display: block
				width: 100%
				height: 100%