.content-info
	float: left
	width: calc(100% - 365px)

.content-sidebar
	float: right
	width: 343px
	padding: 0 0 0 25px
	box-sizing: border-box

.info-block
	display: flex
	align-items: flex-end

.forcast
	width: 200px
	border-radius: 3px
	background: rgba(67, 84, 100, 0.6)
	color: #fff
	padding: 15px 10px 10px
	box-sizing: border-box
	font: 14px/18px $roboto-regular
	margin-right: 30px
	.box-ttl
		display: block
		margin-bottom: 15px

	.form-row
		margin-bottom: 9px
		holder()
		label
			font-size: 11px
			float: left
			max-width: 200px
			margin-top: 7px
		input[type="text"]
			float: right
			width: 110px
			background: #ffffff
			box-sizing: border-box
			border: solid 1px rgba(151, 151, 151, 0.56)
			font-size: 12px
			line-height: 16px
			padding: 8px
			outline: none
			margin: 0

.chart-wrap
	width: calc(100% - 230px)

.chart-style
	margin-left: -45px
	li
		display: inline-block
		vertical-align: middle
		padding: 12px 8px 9px
		border: 1px solid transparent
		border-radius: 3px
		margin-left: 45px
		margin-bottom: 20px
		position: relative
		cursor: pointer
		&:before
			position: absolute
			left: 50%
			bottom: 0
			width: 20px
			height: 20px
			background: $dark-sky-blue
			border-radius: 50%
			margin: 0 0 -10px -10px
		&:after
			mark(1px, 1px, 50%)
			z-index: 2
			top: auto
			bottom: 0
			margin-left: -5px
			margin-bottom: -1px
		&.active
			border-color: #d8dcdf
			&:before,
			&:after
				content: ''
		&:first-child,
		&:nth-child(2),
		&:nth-child(3)
			svg
				width: 55px
				height: 49px
		&:nth-child(4)
			svg
				width: 57px
				height: 51px
		&:nth-child(5)
			svg
				width: 53px
				height: 53px

.note
	font: 12px/16px $roboto-regular
	color: #989fa6
	display: block
	margin-bottom: 25px
	
.checkbox-wrap
	.row
		position: relative
		margin-bottom: 30px
		font: 14px/18px $roboto-regular
		color: #38414b
		input[type="checkbox"]
			unvisible-input()
		label
			padding-left: 35px
			position: relative
			cursor: pointer
			&:before
				checkbox(3px, -5px, 22px, 22px)
				content: ''
			&:after
				mark(2px, 2px, 7px)

		input[type="checkbox"]
			&:checked + label
				&:before
					background: $dark-sky-blue
				&:after
					content: ''