doctype html
html(lang='en')
	include ../common/head.pug
	body
		.page
			.page-overlay
			.page-fader

			include ../components/menu-panel.pug
			include ../components/header.pug
			.control-panel
				h1.title Growth
				.r-bar
					ul.btn-tools
						li.active
							a(href="#") Day
						li
							a(href="#") Route
						li
							a(href="#") Region
					a.blue-btn.upload.js-popup-opener(href="#create-query")
						svg
							use(xlink:href='#upload')
						| Save to My Queries
					button.blue-btn.save
						svg
							use(xlink:href='#save')
						| Save
					button.dark-grey-btn.export
						svg
							use(xlink:href='#exit')
						| Export
			.content
				.white-content.divider
					.holder
						.content-info
							.content-panel
								h3 Daily Growth
								.r-bar
									select.selectpicker(title="All Routes", multiple, data-live-search="true")
										each routes in [{route: 'MCT'}, {route: 'SHJ'}, {route: 'DXB'}, {route: 'IST', selected: true}, {route: 'KWI'}, {route: 'AMM'}, {route: 'DOH'}, {route: 'IST'}, {route: 'AUH'}]
											option(selected=routes.selected)= routes.route
									select.selectpicker(title="In & Out")
										option My New Sales Report
										option My New Report
									select.selectpicker(title="All Sectors")
										option My New Sales Report
										option My New Report
									select.selectpicker(multiple)
										each mon in [{month: 'January'}, {month: 'February'}, {month: 'March'}, {month: 'May', selected: true}, {month: 'June'}, {month: 'July'}, {month: 'August'}, {month: 'September'}, {month: 'October'}, {month: 'November'}, {month: 'December'}]
											option(selected=mon.selected)= mon.month
							.info-block
								.forcast
									strong.box-ttl Forcast
									form(action="#")
										fieldset
											.form-row
												label Capacity
												input(type="text", value="719,098")
											.form-row
												label Pax
												input(type="text", value="434,490")
											.form-row
												label SF %
												input(type="text", value="80%")
											.form-row
												label Revenue
												input(type="text", value="120,719,098")
											.form-row
												label Avg. YLD
												input(type="text", value="329.0")
											.form-row
												label R/ASK (fils)
												input(type="text", value="14.1")
								.chart-wrap
									.chart-legend

									.d3chart.bar-chart.js-growth-chart
						.content-sidebar
							h3 Select Graph Style
							ul.chart-style
								li.active
									svg
										use(xlink:href='#col-chart')
								li
									svg
										use(xlink:href='#horizontal-col-chart')
								li
									svg
										use(xlink:href='#line-chart')
								li
									svg
										use(xlink:href='#region-chart')
								li
									img(src="images/pie-chart.svg", alt="")
							h3.not-indent Schedule
							span.note Report Generation Frequency
							.checkbox-wrap
								.row
									input(type="checkbox", checked="checked", id="daily")
									label(for="daily") Daily
								.row
									input(type="checkbox", id="weekly")
									label(for="weekly") Weekly
								.row
									input(type="checkbox", id="monthly")
									label(for="monthly") Monthly
								.row
									input(type="checkbox", id="custom-date" class="custom-date")
									label(for="custom-date") Custom Date
							.datepicker-row.inactive
								div
									label(for="from-date" class="input-label") From
									input(type="text", id="from-date", class="datepicker" disabled)
								div
									label(for="to-date" class="input-label") To
									input(type="text", id="to-date", class="datepicker" disabled)
							h3.not-indent Recepients
							.recepients-holder
								label(for="recepients" class="input-label") Email Address
								input(type="text", id="recepients")
								a.add(href="#")
									svg
										use(xlink:href='#add')
							.recepients-list
								.item
									span shiran@isa.ae
									a.remove(href="#")
										svg
											use(xlink:href='#close')
								.item
									span aamir@airarabia.com
									a.remove(href="#")
										svg
											use(xlink:href='#close')

				include ../components/create-query-popup